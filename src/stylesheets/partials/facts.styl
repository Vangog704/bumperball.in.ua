.facts
  background-color: #FFF
  min-height: 500px
  +media-tablet-up()
    min-height: auto

  .heading-title
    color: #000!important

  .facts-list
    display: flex
    flex-direction: row
    align-items: flex-start
    justify-content: space-evenly
    flex-wrap: wrap

.fact
  display: flex
  flex-direction: column
  align-items: center
  width: 180px
  margin-bottom: 30px

  &-value
    color: #0060FF
    text-transform: uppercase
    font-size: 50px

  &-text
    text-align: center
    font-size: 16px
    color: #000

