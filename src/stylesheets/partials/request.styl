@keyframes form-done
  0%
    height: 250px
  100%
    height: 30px

@keyframes disapire
  0%
    opacity: 1
  100%
    opacity: 0

.request
  position relative
  padding: 60px 90px
  text-align: center
  border: 1px solid #ffffff
  overflow: hidden
  margin: auto
  height: 250px

  &-wrap
    opacity: 1

  &.done
    animation: form-done .5s linear
    height: 30px
    & .request-wrap
      animation: disapire .5s linear
      opacity: 0

  +media-tablet-landscape-up()
    padding: 60px
  +media-phone-up()
    padding: 30px

  .request-form
    position: relative
    display: flex
    flex-direction: column
    align-items: stretch
    +media-tablet-up()
      flex-direction: column

  .loading-icon
    display: inline-block
    color: #0000
    margin: -12px 10px
    width: 40px
    height 40px
    border-radius: 40px
    border-top: solid 3px white
    border-right: solid 3px #fff0
    animation: loading-icon .6s linear infinite

  &-icon
    position: absolute
    top: 10px
    right: 10px

  &-title
    display: block
    margin-bottom: 40px
    font-size: 25px
    text-transform: uppercase
    +media-phone-up()
      font-size: 20px

  &-btn
    width: 274px
    height: 50px
    line-height: 50px
    font-size: 16px
    color: #ffffff
    background-color: #c48233
    transition: all .3s ease-in-out
    box-shadow: 0 0 8px 5px rgba(196, 130, 51, 0.75)

    &:hover
      background: darken(#c48233, 20%)

    @keyframes loading-icon
      0%
        transform: rotate(0deg)
      100%
        transform: rotate(360deg)

  &-input
    padding: 0 10px
    margin-bottom: 10px
    width: 260px
    height: 40px
    line-height: 40px
    font-size: 16px
    color: #ffffff
    background-color: transparent
    border-top: none
    border-left: none
    border-right: none
    border-bottom: 1px solid #5b5c5b
    box-sizing border-box

    +media-tablet-up()
      width: 100%

  -in

  & .invalid
    border-bottom: solid 2px red

  .form-container
    display: flex
    flex-direction: row
    justify-content: space-around
    flex-wrap: wrap

  .request-action
    margin-top: 40px


