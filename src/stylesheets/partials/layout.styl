#up-button
  background-image: url("../images/top.svg")
  background-repeat: no-repeat
  background-position: center
  background-size: 20px
  width: 30px;
  height: 30px;
  border-radius: 100%
  background-color: #CCCEC8
  cursor: pointer
  bottom: 50px
  right: 50px
  z-index: 999
  box-shadow: 1px 1px 6px -3px #000
  display: none

#up-button.sticky
  position: fixed
  display: block

.container
  max-width: 1060px
  margin: 0 auto

  +media-desktop-up()
    width: 980px

  +media-tablet-landscape-up()
    width: 760px
    padding: 0 20px
    box-sizing border-box

  +media-tablet-up()
    width: 100%

.header
  position: absolute
  top: 0
  left: 0
  width: 100%
  z-index: 5
  will-change background-color
  transition: background-color 0.2s ease-in-out
  +media-tablet-landscape-up()
    position: fixed
    background-color: #0a0a0a

  &-wrap
    position: relative
    height: 95px
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center

  &-left
    display: flex
    justify-content: space-between
    align-items: center

    .hamburger
      display: none
      position: absolute
      left: 0
      top: 50%
      transform: translateY(-50%)

      +media-tablet-landscape-up()
        display: inline-block
        z-index: 10

    .logo
      position: relative
      display: inline-block
      +media-tablet-landscape-up()
        margin-left: 30px

      &-img
        width: 200px

        +media-tablet-landscape-up()
          display: none

      &-img-small
        display: none
        +media-tablet-landscape-up()
          display: block

  &-right
    display: flex
    flex-direction row
    align-items center

    .phone
      margin-right: 30px
      display: flex
      flex-direction: column

      +media-tablet-up()
        margin-right: 0

      &-item
        color: #ffffff

  &-center
    +media-tablet-landscape-up()
      display: none

.header.sticky
  position: fixed
  background-color: #0a0a0a

.footer
  margin: 50px 0

  &-container
    width: 33.33%
    text-align: center
    justify-content: center

    +media-desktop-up()
      width: 50%

    +media-tablet-up()
      width: 100%

  &-wrap
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    +media-tablet-up()
      flex-direction: column

  &-center
    +media-tablet-up()
      margin: 20px

  &-title
    margin-bottom: 10px
    display: block
    text-align: center
    font-size: 20px

  .social-list
    justify-content: center

  &-link
    color: #c48233
    font-size: 24px

  .phone-item
    display: flex
    flex-direction: column
    color: #c48233
    font-size: 24px

