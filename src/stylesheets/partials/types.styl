.types
  position: relative
  min-height: 800px
  background-color: #000000

  &-list
    // width: 100%
    display: flex
    flex-direction: row
    justify-content: space-between
    overflow-x: auto
    min-width: 100%
    -ms-overflow-x-style: none;
    &::-webkit-scrollbar
      display: none

.type
  &-card
    width: 340px
    min-width: 340px
  
  margin: 20px
  position: relative
  padding: 50px 30px 0 30px
  min-height: 360px
  background-color: #ffffff
  color: #000000
  box-shadow: 0 0 10px 5px rgba(255,255,255,1)
  box-sizing border-box

  &-title
    height: 2em
    display: inline-block
    margin-bottom: 20px
    font-size: 20px
    text-transform: uppercase

  &-text
    font-size: 16px

  &-button-wrap
    position: absolute
    left: 0
    bottom: 0
    width: 100%

  &-button
    width: 100%
    height: 74px
    line-height 74px
    color: #ffffff
    font-size: 16px
    text-transform: uppercase
    text-decoration: underline
    background-image: linear-gradient(to right top, #eb413a, #f14c32, #f75728, #fb631b, #fe6f04)
